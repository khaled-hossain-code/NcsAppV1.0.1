        //     // main config
        //     path: "sound/",
        //     preload: true,
        //     multiplay: true,
        //     volume: 1
        // });      
            
      });        
    
    function deviceStatusAction(argument) {
      // body...
      var devData = argument.split(",");
      $('#formStatus').attr("action", "/devices/status/"+devData[1]+"/"+devData[0]+""); 
      $('#formStatus').submit();
    }

    function modalOpenFunction(id='', ip='', floor='', roomType='', roomNum='', bedNum='', eidtStatus){
            
            // 1 for insert, 2 for edit    
            
            $("#form").trigger( "reset" );
            if(eidtStatus == 2){
              $("#docID").val(id);
              $("#submitStatus").val(2);
              $("#IP").val(ip);
              $("#Floor").val(floor);
              $("#RoomType").val(roomType);
              $("#RoomNumber").val(roomNum);
              $("#BedNumber").val(bedNum);
              //$('#Status').val(connectionStatus);
            }else{
              $("#docID").val('');
              $("#IP").val('');
              $("#Floor").val('');
              $("#RoomType").val('');
              $("#RoomNumber").val('');
              $("#BedNumber").val('');
              $("#submitStatus").val(1);              
            }            

            $("#IP").prop("readonly", true);
            $("#device-info").modal();
    }

    function turnOnLightFunction () {
      // body...
      alert('turn light on');
    }

    function deviceDisconnectAlert(ip){

      Snackbar.show({
        pos: 'top-center',
        text: 'Device Disconnected!!! IP: '+ ip,     
        width: '475px',
        backgroundColor: '#dd4b39',
        actionText: 'close',
        actionTextColor: '#000000'
      });
    }

    function deviceConnectedAlert(ip){

      Snackbar.show({
        pos: 'top-center',
        text: 'Device Connected!!! IP: '+ ip,     
        width: '475px',
        backgroundColor: '#398439',
        actionText: 'close',
        actionTextColor: '#000000'
      });
    }

    // function playAlertSound () {
      
