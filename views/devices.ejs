  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
      <% include templates/top_nav_bar.ejs %>
      <!-- Left side column. contains the logo and sidebar -->
      <% include templates/left_nav_bar.ejs %>
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>Device List</h1>
          <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Device List</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
			  <div class="box box-primary">
          <div class="box-header">
            <h3 class="box-title">Device List</h3>
            <!-- <button type="button" name="btnAddDevice" id="btnAddDevice" class="btn btn-success pull-right" onclick="modalOpenFunction('', '', '', '', '', '', 1)"><i class="fa fa-plus-circle"></i> Add Device</button> -->
            
          </div><!-- /.box-header -->
          <div class="box-body" ng-controller="listCtrl as list">
            <table id="deviceListTable" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>IP</th>
			            <th>Floor</th>
                  <th>Room Type</th>
                  <th>Room Number</th>                  
                  <th>Bed Number</th>                  
                  <th>Status</th>                  
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
              <% for(var i=0; i < data.length; i++) { %>
                 <tr>
                  <td><%= data[i].IP %></td>
                  <td><%= data[i].Floor %></td>
                  <td><%= data[i].RoomType %></td>
                  <td><%= data[i].RoomNumber %></td>               
                  <td><%= data[i].BedNumber %></td>               
                  <td>
                    <% if (data[i].Status == 1){ %>
                      <small class="label label-success">CONNECTED</small>
                    <% }else if (data[i].Status == 0){ %>
                      <small class="label label-danger">DISCONNECTED</small>
                    <% }else{ %>
                      <small class="label label-info">DEACTIVE</small>
                    <% } %>

                  </td>                  
                  <td class="text-center">
                    
                            

                    <!-- <a href="/devices/del/<%= data[i].id %>"><button type="button" class="btn btn-sm btn-danger"><i class="fa fa-power-off"></i></button></a> -->           

                    <!-- <button type="button" id="lightOnBtn" class="btn btn-sm btn-warning" onclick="turnOnLightFunction()"><i class="fa fa-lightbulb-o"></i></button> -->

                    <form id="formStatus" name="formStatus" action="" method="GET">  

                    <button type="button" id="editModalBtn" class="btn btn-sm btn-primary" onclick="modalOpenFunction('<%= data[i].id %>', '<%= data[i].IP %>', '<%= data[i].Floor %>', '<%= data[i].RoomType %>', '<%= data[i].RoomNumber %>', '<%= data[i].BedNumber %>', 2)"><i class="fa fa-edit"></i></button> 

                    <select name="deviceState" id="deviceState" class="form-control input-sm" onChange="deviceStatusAction(this.value)">
                      <option value="">select</option>
                      <option value="1,<%= data[i].IP %>">Normal Call</option>
                      <option value="0,<%= data[i].IP %>">Nurse Presence</option>
                      <option value="2,<%= data[i].IP %>">Emergency Call</option>
                      <option value="4,<%= data[i].IP %>">Cancel Emergency</option>
                      <option value="3,<%= data[i].IP %>">BlueCode Call</option>
                      <option value="5,<%= data[i].IP %>">Cancel BlueCode</option>
                      <option value="6,<%= data[i].IP %>">Reset App</option>
                      <option value="10,<%= data[i].IP %>">Ready</option>
                    </select>
                    </form>

                  </td>
                </tr>
              <% } %>                    

					</tbody>
				</table>

        <div class="modal fade" id="device-info">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Edit Device Data</h4>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col-md-8 col-md-offset-2">
                    <form id="form" name="form" action="/devices" method="POST" role="form" data-parsley-validate>

                      <input type="hidden" name="docID" id="docID" value="">
                      <input type="hidden" name="submitStatus" id="submitStatus" value="">

                      <div class="form-group">
                        <label for="">IP </label>
                        <input type="text" class="form-control" id="IP" name="IP" value="" placeholder="IP" readonly>
                      </div>

                      <div class="form-group">
                        <label for="">Floor</label>                        
                        <select name="Floor" id="Floor" class="form-control" required>
                          <option value="">select</option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                          <option value="4">4</option>
                          <option value="5">5</option>
                          <option value="6">6</option>
                          <option value="7">7</option>
                          <option value="8">8</option>
                          <option value="9">9</option>
                          <option value="0">10</option>                          
                        </select>
                      </div>                 
                      <div class="form-group">
                        <label for="">Room Type</label>
                        <select name="RoomType" id="RoomType" class="form-control" required>
                          <option value="">select</option>
                          <option value="Single" >Single</option>
                          <option value="DoubleShare" >DoubleShare</option>
                          <option value="VIP" >VIP</option>
                          <option value="MaleWard" >MaleWard</option>
                          <option value="FemaleWard" >FemaleWard</option>
                          <option value="ICU" >ICU</option>
                          <option value="CCU" >CCU</option>
                          <option value="MICU" >MICU</option>
                          <option value="Dialysis" >Dialysis</option>
                        </select>
                      </div>                 
                      <div class="form-group">
                        <label for="">Room Number</label>
                        <input type="text" class="form-control" id="RoomNumber" name="RoomNumber" value="" placeholder="Room Number" minlength="2" maxlength="8" required autocomplete="off">
                      </div>

                      <div class="form-group">
                        <label for="">Bed Number</label>
                        <input type="text" class="form-control" id="BedNumber" name="BedNumber" value="" placeholder="Bed Number" minlength="2" maxlength="8" required autocomplete="off">
                      </div>

                      <!-- <div class="form-group">
                        <label for="">Staus</label>
                        <select name="Status" id="Status" class="form-control">
                          <option value="">select</option>
                          <option value="1">Connected</option>
                          <option value="0" disabled>Disconnected</option>
                          <option value="2" disabled>Deactivated</option>
                        </select>
                      </div> -->
                    
                      <button type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-primary"> Save </button> 
                      <div id="userspinner"></div>                     
                    </form>
                  </div>
                  
                </div>
              </div>              
            </div>
          </div>
        </div>

			</div><!-- /.box-body -->
        </div><!-- /.box -->

        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->
            
      <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
      <div class="control-sidebar-bg"></div>
    </div><!-- ./wrapper -->

